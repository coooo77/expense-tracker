<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-md-10 border">

      <div class="dropdown">
        <button class="w-50 btn btn-secondary btn-block dropdown-toggle " type="button" id="dropdownMenuButton"
          data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          類別
        </button>
        <div class="w-50 dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item text-center" href="#">家居物業</a>
          <a class="dropdown-item text-center" href="#">交通出行</a>
          <a class="dropdown-item text-center" href="#">休閒娛樂</a>
          <a class="dropdown-item text-center" href="#">餐飲食品</a>
          <a class="dropdown-item text-center" href="#">其他</a>
        </div>

        <div id="show" class="mt-3">
          總金額：<h1>25260</h1>
        </div>
        <ul class="list-group">
          {{#each records}}
            <li class="list-group-item p-2 d-flex justify-content-center">
              <div class="row w-100 d-flex justify-content-between">
                <div class="col-9 d-flex justify-content-between border border-danger">
                  <div id="item detail" class="d-flex justify-content-between align-items-center">
                    <i class="fas fa-home fa-3x mr-2"></i>
                    <div>
                      <h4 class="mb-0">{{{this.name}}}</h4>
                      <h6>{{{this.date}}}</h6>
                    </div>
                  </div>
                  <h4 class="mt-3" style="height:30;line-height:20px;">
                    {{{this.amount}}}
                  </h4>
                </div>
                <div class="col-auto d-flex align-items-center">
                  <a href="/todos/{{{this._id}}}/edit" class="btn btn-success">修改</a>
                  <form action="/todos/{{{this._id}}}/delete?_method=DELETE" method="post" style="display:inline">
                    <button type="submit" class="btn btn-danger">刪除</button>
                  </form>
                </div>
              </div>
            </li>
          {{/each}}
        </ul>
        <a href="/todos/new" class="btn btn-primary mb-3">新增支出</a>
      </div>
    </div>
  </div>
</div>