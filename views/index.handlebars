<div class="container mt-5">
  <div class="row d-flex justify-content-center">
    <div class="col-12 col-md-10 border">

      <div class="dropdown border border-danger d-flex p-1">
        <button class="w-50 h-100 btn btn-secondary btn-block dropdown-toggle " type="button" id="dropdownMenuButton"
          data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
          類別
        </button>
        <div class="w-50 dropdown-menu" aria-labelledby="dropdownMenuButton">
          <a class="dropdown-item text-center" href="http://localhost:3000/records?type=home">家居物業</a>
          <a class="dropdown-item text-center" href="http://localhost:3000/records?type=transport">交通出行</a>
          <a class="dropdown-item text-center" href="http://localhost:3000/records?type=entertain">休閒娛樂</a>
          <a class="dropdown-item text-center" href="http://localhost:3000/records?type=food">餐飲食品</a>
          <a class="dropdown-item text-center" href="http://localhost:3000/records?type=other">其他</a>
          <a class="dropdown-item text-center" href="http://localhost:3000/records">所有項目</a>
        </div>
        <a href="/records?{{#if type}}type={{type}}{{/if}}&field=date{{#if nextOrderForDate}}&order={{nextOrderForDate}}{{/if}}"
          class="w-25 btn btn-primary mb-3">時間</a>
        <a href="/records?{{#if type}}type={{type}}{{/if}}&field=amount{{#if nextOrderForAmount}}&order={{nextOrderForAmount}}{{/if}}"
          class="w-25 btn btn-primary mb-3">金額</a>
      </div>

      <div id="show" class="mt-3">
        總金額：<h1>{{totalAmount}}</h1>
      </div>
      <ul class="list-group">
        {{#each records}}
          <li class="list-group-item p-2 d-flex justify-content-center">
            <div class="row w-100 d-flex justify-content-between">
              <div class="col-9 d-flex justify-content-between border border-danger">
                <div id="item detail" class="d-flex justify-content-between align-items-center">
                  <div class="d-flex justify-content-center" style="width: 70px">
                    {{#if this.home}}<i class="fas fa-home fa-3x mr-2"></i>{{/if}}
                    {{#if this.transport}}<i class="fas fa-shuttle-van fa-3x mr-2"></i>{{/if}}
                    {{#if this.entertain}}<i class="fas fa-grin-beam fa-3x mr-2"></i>{{/if}}
                    {{#if this.food}}<i class="fas fa-utensils fa-3x mr-2"></i>{{/if}}
                    {{#if this.other}}<i class="fas fa-pen fa-3x mr-2"></i>{{/if}}
                  </div>
                  <div class="mt-1">
                    <h4 class="mb-0">{{{this.name}}}</h4>
                    <h6>{{{this.date}}}</h6>
                  </div>
                </div>
                <h4 class="mt-3" style="height:30;line-height:25px;">
                  {{{this.amount}}}
                </h4>
              </div>
              <div class="col-auto d-flex align-items-center">
                <a href="/records/{{{this._id}}}/edit" class="btn btn-success">修改</a>
                <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#Modal{{{this._id}}}">
                  刪除
                </button>

                <div class="modal fade" id="Modal{{{this._id}}}" tabindex="-1" role="dialog"
                  aria-labelledby="ModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="ModalLabel">
                          您正在刪除一筆資料
                        </h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                        </button>
                      </div>
                      <div class="modal-body">
                        確定要刪除{{this.name}}嗎?
                      </div>
                      <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">放棄</button>
                        <form method="POST" action="/records/{{{this._id}}}/delete?_method=DELETE"
                          style="display: inline;">
                          <button class="btn btn-danger p-1 btn-lg" type="submit">刪除</button>
                        </form>
                      </div>
                    </div>
                  </div>
                </div>

              </div>
            </div>
          </li>
        {{/each}}
      </ul>

      <a href="/records/new" class="btn btn-primary mb-3">新增支出</a>

    </div>
  </div>
</div>