<div class="row">
  <div class="col-md-10 col-12 mx-auto mt-5">

    <div class="form-group row">
      <label for="colFormLabelLg" class="col-sm-2 col-form-label ">必填欄位*：</label>
      <label for="colFormLabelLg" class="col-sm-10 col-form-label col-form-label-lg text-center">請輸入你的支出</label>
    </div>

    <form action="/records" method="POST">

      <div class="form-group row">
        <label for="name" class="col-sm-2 col-form-label col-form-label-lg">名稱*：</label>
        <div class="col-sm-10">
          <input type="text" class="form-control form-control-lg" id="name" name="name" placeholder="項目名稱">
        </div>
      </div>

      <div class="form-group row">
        <label for="date" class="col-sm-2 col-form-label col-form-label-lg">日期*：</label>
        <div class="col-sm-10">
          <input type="date" class="form-control form-control-lg" id="date" name="date">
        </div>
      </div>

      <div class="form-group row">
        <label for="category" class="col-sm-2 col-form-label col-form-label-lg">類別*：</label>
        <div class="col-sm-10">
          <select class="custom-select" style="height:50px;font-size:20px" id="category" name="category">
            <option selected>Select</option>
            <option value="home">家居物業</option>
            <option value="transport">交通出行</option>
            <option value="entertain">休閒娛樂</option>
            <option value="food">餐飲食品</option>
            <option value="other">其他</option>
          </select>
        </div>
      </div>


      <div class="form-group row">
        <label for="amount" class="col-sm-2 col-form-label col-form-label-lg">金額*：</label>
        <div class="col-sm-10">
          <input type="number" class="form-control form-control-lg" id="amount" name="amount" placeholder="項目花費">
        </div>
      </div>


      <div class="form-group row d-flex justify-content-end">
        <div class="col-10">
          <button type="submit" class="btn btn-primary btn-lg btn-block">新增支出</button>
        </div>
      </div>

    </form>

    {{#if result}}
      <div class="alert alert-info mt-3" role="alert">
        <span class="mr-2">資料填寫不完整！</span>
      </div>
    {{/if}}

  </div>
</div>